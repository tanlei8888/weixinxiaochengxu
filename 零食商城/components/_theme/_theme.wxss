.theme {
  width: 100%;
}
.theme .theme-txt {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.theme .theme-txt text {
  color: #c9ba9c;
}
.theme .theme-image {
  width: 100%;
  /* vertical-align: top; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  /* flex-direction: column; */
}
.theme .theme-image .imgBox{
  width: 49%;
  height: 400rpx;
}
.theme .theme-image .imgBox .img-item {
  width: 100%;
  height: 100%;
  /* vertical-align: top; */
}
.theme .theme-image .imgBox:nth-child(3) {
  width: 100%;
}