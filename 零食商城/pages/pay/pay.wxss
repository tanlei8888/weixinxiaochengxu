.snack-pay .snak-pay-address {
  text-align: center;
  height: 200rpx;
  line-height: 200rpx;
  border-bottom: 10rpx solid #ededed;
}
.snack-pay .snak-pay-address .top {
  height: 100prx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: left;
  color: #ededed;
  padding: 0 10rpx;
  display: flex;
  justify-content: space-between;
}
.snack-pay .snak-pay-address .bottom {
  padding: 0 10rpx;
  height: 100prx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: left;
  color: #ededed;
}
.snack-pay .snack-pay-list {
  height: 850rpx;
}
.snack-pay .snack-pay-list .list-item {
  height: 200rpx;
  border-bottom: 1px solid #ededed;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.snack-pay .snack-pay-list .list-item .left {
  padding: 20rpx;
  width: 200rpx;
}
.snack-pay .snack-pay-list .list-item .left image {
  width: 100%;
}
.snack-pay .snack-pay-list .list-item .right {
  width: 200rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  text-align: right;
}
.snack-pay .snack-pay-list .list-item .right view {
  margin: 10rpx 0;
}
.snack-pay .snake-pay-bottom {
  width: 100vw;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #ededed;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.snack-pay .snake-pay-bottom .left {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 20rpx;
}
.snack-pay .snake-pay-bottom .left text {
  color: #d8bdbc;
}
.snack-pay .snake-pay-bottom .right {
  width: 200rpx;
  line-height: 150rpx;
  text-align: center;
  color: white;
  background-color: #ab946d;
}
