.product {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.product .product-img {
  width: 200rpx;
  height: 200rpx;
  margin: 100rpx 0;
}
.product .product-img image {
  width: 100%;
  height: 100%;
}
.product .btn {
  width: 80%;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #ab946d;
  color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.product .btn .left {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.product .btn .left .addBtn {
  margin-left: 20rpx;
}
.product .btn .right {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.product .btn .right .car {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}
.product .btn .right .car image {
  width: 100%;
  height: 100%;
}
.product .xiangqing {
  height: 100rpx;
  line-height: 100rpx;
}
.product .options {
  width: 100%;
  border-top: 20rpx solid #c7c7cb;
}
.product .options .option {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  color: #c7c7cb;
  border-bottom: 2px solid #c7c7cb;
}
